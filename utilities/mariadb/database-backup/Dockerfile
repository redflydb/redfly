FROM mariadb:10.5
ENV TZ=America/New_York
# Copy the shell script for performing the backup.
COPY database_backup.sh /
# Expose a mount point for accessing the MySQL dump generated by the backup
# script. The dump file will be placed in this directory.
VOLUME ["/db/dumps"]
# Starting the container without arguments will automatically invoke the script.
CMD ["sh", "/database_backup.sh"]